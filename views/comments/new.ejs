<h1> This is the page for adding new comments to <%= campground.name %> </h1>

<div class="container mt-4">
 <div class="row m-4">
    <form  action="/campgrounds/<%=campground._id%>/comments" class="col-md-3" method="POST">
     <div class="form-group">
               <input type="text" class="form-control" name="comments[author]" placeholder = "author">
      </div>      
      <div class="form-group">
               <!--<input type="text" class="form-control" name="comments[text]" placeholder ="comment">-->
               <textarea class="form-control" name="comments[text]" placeholder ="comment"></textarea>
      </div> 
     <div class="form-group">
               <input class="btn btn-default btn-block btn-primary rounded" type="submit" value="Submit"/>
      </div>         
    </form>
   
 </div>
 
</div>
